			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/${post.id}/`}>
									<Image width={720} height={360} src={post.data.heroImage} alt="" format="avif" loading="eager" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>

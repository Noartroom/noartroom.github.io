<style>
			main {
				width: 960px;
			}
			div.model-container {
				min-height: 300px;
				min-width: 300px;
				display: flex;
				justify-content: center;
				margin: 4em;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
